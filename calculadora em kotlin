    fun calculate (n1:Double, n2:Double, operation:String){
        when{
            operation == "soma" -> println(n1+n2)
            operation == "mult" -> println(n1*n2)
            operation == "div" -> println(n1/n2)
            operation == "resto" -> println(n1%n2)
            //operation == "fatorial" ->println((for i in 1..n1){i+=})
            else -> println("n√£o foi possivel operar!")
        }
    }
   calculate(8.0,5.0,"resto" )
}
